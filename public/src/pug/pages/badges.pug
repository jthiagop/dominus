                                    ul#badgeDefaultTabs.nav.nav-tabs(role='tablist')
                                        li.nav-item
                                            a#badgeDefaultHtmlTab.nav-link.active.me-1(data-bs-toggle='tab', href='#badgeDefaultHtml', role='tab', aria-controls='badgeDefaultHtml', aria-selected='true')
