mixin topnav(options)

    //- Classes are set for the nav element using the Pug below
    //- * * Note: * * The .justify-content-between class is being used to push items apart correctly on small screens.
    //- * * * * * * * The .justify-content-sm-start brings the items back to their default alignment on larger screens, on the sm breakpoint and up.
    nav(class=['topnav', 'navbar', 'navbar-expand', 'shadow', 'justify-content-between', 'justify-content-sm-start'] class=options.topnavStyle)#sidenavAccordion

        // Sidenav Toggle Button
        button#sidebarToggle.btn.btn-icon.btn-transparent-dark.order-1.order-lg-0.me-2.ms-lg-2.me-lg-0
            i(data-feather='menu')

        // Navbar Brand
        // * * Tip * * You can use text or an image for your navbar brand.
        // * * * * * * When using an image, we recommend the SVG format.
        // * * * * * * Dimensions: Maximum height: 32px, maximum width: 240px
        a.navbar-brand.pe-3.ps-4.ps-lg-2(href='index.html')
            | SB Admin Pro

        // Navbar Search Input
        // * * Note: * * Visible only on and above the lg breakpoint
        form.form-inline.me-auto.d-none.d-lg-block.me-3
            .input-group.input-group-joined.input-group-solid
                input.form-control.pe-0(type='search', placeholder='Search', aria-label='Search')
                .input-group-text
                    i(data-feather='search')

        // Navbar Items
        ul.navbar-nav.align-items-center.ms-auto

            // Documentation Dropdown
            li.nav-item.dropdown.no-caret.d-none.d-md-block.me-3
                a#navbarDropdownDocs.nav-link.dropdown-toggle(href='javascript:void(0);', role='button', data-bs-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                    .fw-500
                        | Documentation
                    i.fas.fa-chevron-right.dropdown-arrow
                .dropdown-menu.dropdown-menu-end.py-0.me-sm-n15.me-lg-0.o-hidden.animated--fade-in-up(aria-labelledby='navbarDropdownDocs')
                    a.dropdown-item.py-3(href='https://docs.startbootstrap.com/sb-admin-pro', target='_blank')
                        .icon-stack.bg-primary-soft.text-primary.me-4
                            i(data-feather='book')
                        div
                            .small.text-gray-500 Documentation
                            | Usage instructions and reference
                    .dropdown-divider.m-0
                    a.dropdown-item.py-3(href='https://docs.startbootstrap.com/sb-admin-pro/components', target='_blank')
                        .icon-stack.bg-primary-soft.text-primary.me-4
                            i(data-feather='code')
                        div
                            .small.text-gray-500 Components
                            | Code snippets and reference
                    .dropdown-divider.m-0
                    a.dropdown-item.py-3(href='https://docs.startbootstrap.com/sb-admin-pro/changelog', target='_blank')
                        .icon-stack.bg-primary-soft.text-primary.me-4
                            i(data-feather='file-text')
                        div
                            .small.text-gray-500 Changelog
                            | Updates and changes

            // Navbar Search Dropdown
            // * * Note: * * Visible only below the lg breakpoint
            li.nav-item.dropdown.no-caret.me-3.d-lg-none
                a#searchDropdown.btn.btn-icon.btn-transparent-dark.dropdown-toggle(href='#', role='button', data-bs-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                    i(data-feather='search')
                // Dropdown - Search
                .dropdown-menu.dropdown-menu-end.p-3.shadow.animated--fade-in-up(aria-labelledby='searchDropdown')
                    form.form-inline.me-auto.w-100
                        .input-group.input-group-joined.input-group-solid
                            input.form-control.pe-0(type='text', placeholder='Search for...', aria-label='Search', aria-describedby='basic-addon2')
                            .input-group-text
                                i(data-feather='search')

            // Alerts Dropdown
            li.nav-item.dropdown.no-caret.d-none.d-sm-block.me-3.dropdown-notifications
                a#navbarDropdownAlerts.btn.btn-icon.btn-transparent-dark.dropdown-toggle(href='javascript:void(0);', role='button', data-bs-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
