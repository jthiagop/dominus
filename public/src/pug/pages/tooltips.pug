//- * * * * * * * *
//- * * Layout  * *
//- * * * * * * * *

//- The page layout is set using the Pug `extends` directive with a path to a layout template
//- All of the layout options are contained in src/pug/layouts
extends ../layouts/dashboard.pug

//- * * * * * * * *
//- * * Config  * *
//- * * * * * * * *

//- These are page-level configuration options that should be set for each page
block config
    - var navPosition = 'nav-fixed'
    - var pageTitle = 'Tooltips'

//- * * * * * * * *
//- * * Topnav  * *
//- * * * * * * * *

//- Define the `block topnav` from the layout
block topnav

    //- Bring in the sidenav mixin and configure
    //- For all available config options for this mixin, visit https://docs.startbootstrap.com/sb-admin-pro/
    include mixins/topnav.pug
    +topnav({
        topnavStyle: 'navbar-light bg-white'
    })

//- * * * * * * * *
//- * * Sidenav * *
//- * * * * * * * *

//- Define the `block sidenav` from the layout
//- Note: The chosen page layout must have a `block sidenav` or no sidenav will appear
block sidenav

    //- Bring in the sidenav mixin and configure
    //- For all available config options for this mixin, visit https://docs.startbootstrap.com/sb-admin-pro/
    include mixins/sidenav.pug
    +sidenav({
        sidenavStyle: 'sidenav-light'
    })

//- * * * * * * * * * * *
//- * * Page Content  * *
//- * * * * * * * * * * *

//- Define the main `block content` from the layout
block content

    //- Bring in the page header mixin and configure
    //- For all available config options for this mixin, visit https://docs.startbootstrap.com/sb-admin-pro/
    include mixins/headers/header-default.pug
    +header({
        pageHeaderStyle: 'page-header-dark',
        pageHeaderBg: 'bg-gradient-primary-to-secondary',
        pageHeaderSpacing: 'pb-10',
        pageHeaderContainer: 'container-xl px-4',
        pageSubtitle: 'Animated tooltips to provide annotation on content when hovered over',
        pageIcon: 'help-circle',
        breadcrumbs: false
    })

    // Main page content
    .container-xl.px-4.mt-n10
        .row
            .col-lg-9

                // Default Bootstrap Tooltips
                #tooltips
                    .card.mb-4
                        .card-header Default Bootstrap Tooltips
                        .card-body
                            // Component Preview
                            .sbp-preview
                                .sbp-preview-content.py-3
                                    .row
                                        .col-auto.my-2
                                            button.btn.btn-primary.me-2.mb-2.mb-xl-0(type='button', data-bs-toggle='tooltip', data-bs-placement='top', title='Tooltip on top')
                                                | Tooltip on top
                                        .col-auto.my-2
                                            button.btn.btn-primary.me-2.mb-2.mb-xl-0(type='button', data-bs-toggle='tooltip', data-bs-placement='right', title='Tooltip on right')
                                                | Tooltip on right
                                        .col-auto.my-2
                                            button.btn.btn-primary.me-2.mb-2.mb-xl-0(type='button', data-bs-toggle='tooltip', data-bs-placement='bottom', title='Tooltip on bottom')
                                                | Tooltip on bottom
                                        .col-auto.my-2
                                            button.btn.btn-primary.me-2.mb-2.mb-xl-0(type='button', data-bs-toggle='tooltip', data-bs-placement='left', title='Tooltip on left')
                                                | Tooltip on left

                                .sbp-preview-code
                                    // Code sample
                                    ul#tooltipsExampleTabs.nav.nav-tabs(role='tablist')
                                        li.nav-item
                                            a#tooltipsExampleHtmlTab.nav-link.active.me-1(data-bs-toggle='tab', href='#tooltipsExampleHtml', role='tab', aria-controls='tooltipsExampleHtml', aria-selected='true')
                                                i.fab.fa-html5.text-orange.me-1
                                                | HTML
                                        li.nav-item
                                            a#tooltipsExamplePugTab.nav-link(data-bs-toggle='tab', href='#tooltipsExamplePug', role='tab', aria-controls='tooltipsExamplePug', aria-selected='false')
                                                img.img-pug.me-1(src='assets/img/demo/pug.svg')
                                                | PUG
                                    // Tab panes
                                    .tab-content
                                        #tooltipsExampleHtml.tab-pane.active(role='tabpanel', aria-labelledby='tooltipsExampleHtmlTab')
                                            pre.language-markup
                                                code.
                                                    <script type="text/plain"><button class="btn btn-primary" type="button" data-bs-toggle="tooltip" data-bs-placement="top" title="Tooltip on top">Tooltip on top</button>

                                                    <button class="btn btn-primary" type="button" data-bs-toggle="tooltip" data-bs-placement="right" title="Tooltip on right">Tooltip on right</button>

                                                    <button class="btn btn-primary" type="button" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Tooltip on bottom">Tooltip on bottom</button>

                                                    <button class="btn btn-primary" type="button" data-bs-toggle="tooltip" data-bs-placement="left" title="Tooltip on left">Tooltip on left</button></script>
                                        #tooltipsExamplePug.tab-pane(role='tabpanel', aria-labelledby='tooltipsExamplePugTab')
                                            pre.language-pug
                                                code.
                                                    button.btn.btn-primary(type='button', data-bs-toggle='tooltip', data-bs-placement='top', title='Tooltip on top')
                                                        | Tooltip on top

                                                    button.btn.btn-primary(type='button', data-bs-toggle='tooltip', data-bs-placement='right', title='Tooltip on right')
                                                        | Tooltip on right

                                                    button.btn.btn-primary(type='button', data-bs-toggle='tooltip', data-bs-placement='bottom', title='Tooltip on bottom')
                                                        | Tooltip on bottom

                                                    button.btn.btn-primary(type='button', data-bs-toggle='tooltip', data-bs-placement='left', title='Tooltip on left')
                                                        | Tooltip on left
                                .sbp-preview-text.
                                    <p>Tooltips are visible when an element is hovered over.</p>
                                    By default, using tooltips via data attributes is enabled globally within the SB Admin Pro theme. You can change this default by modifying the <code>js/scripts.js</code> file.

                // Default Bootstrap Popovers
                #popovers
                    .card.mb-4
                        .card-header Default Bootstrap Popovers
                        .card-body
                            // Component Preview
                            .sbp-preview
                                .sbp-preview-content.py-3
                                    .row
                                        .col-auto.my-2
                                            a.btn.btn-primary.me-2.mb-2.mb-xl-0(href='#!', tabindex='0', title='Popover Title', data-bs-container='body', data-bs-toggle='popover', data-bs-placement='top', data-bs-content='This popover is on the top!')
                                                | Popover on top
                                        .col-auto.my-2
                                            a.btn.btn-primary.me-2.mb-2.mb-xl-0(href='#!', tabindex='0', title='Popover Title', data-bs-container='body', data-bs-toggle='popover', data-bs-placement='right', data-bs-content='This popover is on the right!')
                                                | Popover on right
                                        .col-auto.my-2
                                            a.btn.btn-primary.me-2.mb-2.mb-xl-0(href='#!', tabindex='0', title='Popover Title', data-bs-container='body', data-bs-toggle='popover', data-bs-placement='bottom', data-bs-content='This popover is on the bottom!')
                                                | Popover on bottom
                                        .col-auto.my-2
                                            a.btn.btn-primary.me-2.mb-2.mb-xl-0(href='#!', tabindex='0', title='Popover Title', data-bs-container='body', data-bs-toggle='popover', data-bs-placement='left', data-bs-content='This popover is on the left!')
                                                | Popover on left

                                .sbp-preview-code
                                    // Code sample
                                    ul#componentNameTabs.nav.nav-tabs(role='tablist')
                                        li.nav-item
                                            a#componentNameHtmlTab.nav-link.active.me-1(data-bs-toggle='tab', href='#componentNameHtml', role='tab', aria-controls='componentNameHtml', aria-selected='true')
                                                i.fab.fa-html5.text-orange.me-1
                                                | HTML
                                        li.nav-item
                                            a#componentNamePugTab.nav-link(data-bs-toggle='tab', href='#componentNamePug', role='tab', aria-controls='componentNamePug', aria-selected='false')
                                                img.img-pug.me-1(src='assets/img/demo/pug.svg')
                                                | PUG
                                    // Tab panes
                                    .tab-content
                                        #componentNameHtml.tab-pane.active(role='tabpanel', aria-labelledby='componentNameHtmlTab')
                                            pre.language-markup
                                                code.
                                                    <script type="text/plain"><a class="btn btn-primary" href="#!" tabindex="0" data-bs-container="body" data-bs-toggle="popover" data-bs-placement="top" data-bs-content="This popover is on the top!" title="Popover Title">Popover on top</a>

                                                    <a class="btn btn-primary" href="#!" tabindex="0" data-bs-container="body" data-bs-toggle="popover" data-bs-placement="right" data-bs-content="This popover is on the right!" title="Popover Title">Popover on right</a>

                                                    <a class="btn btn-primary" href="#!" tabindex="0" data-bs-container="body" data-bs-toggle="popover" data-bs-placement="bottom" data-bs-content="This popover is on the bottom!" title="Popover Title">Popover on bottom</a>

                                                    <a class="btn btn-primary" href="#!" tabindex="0" data-bs-container="body" data-bs-toggle="popover" data-bs-placement="left" data-bs-content="This popover is on the left!" title="Popover Title">Popover on left</a></script>
                                        #componentNamePug.tab-pane(role='tabpanel', aria-labelledby='componentNamePugTab')
                                            pre.language-pug
                                                code.
                                                    a.btn.btn-primary(href='#!', tabindex='0', title='Popover Title', data-bs-container='body', data-bs-toggle='popover', data-bs-placement='top', data-bs-content='This popover is on the top!')
                                                        | Popover on top

                                                    a.btn.btn-primary(href='#!', tabindex='0', title='Popover Title', data-bs-container='body', data-bs-toggle='popover', data-bs-placement='right', data-bs-content='This popover is on the right!')
                                                        | Popover on right

                                                    a.btn.btn-primary(href='#!', tabindex='0', title='Popover Title', data-bs-container='body', data-bs-toggle='popover', data-bs-placement='bottom', data-bs-content='This popover is on the bottom!')
                                                        | Popover on bottom

                                                    a.btn.btn-primary(href='#!', tabindex='0', title='Popover Title', data-bs-container='body', data-bs-toggle='popover', data-bs-placement='left', data-bs-content='This popover is on the left!')
                                                        | Popover on left
                                .sbp-preview-text.
                                    <p>Popovers are visible when an element is clicked, or focused.</p>
                                    By default, using popovers via data attributes is enabled globally within the SB Admin Pro theme. You can change this default by modifying the <code>js/scripts.js</code> file. The above popovers are dismissable on the user's next click. You can disable this functionality in the <code>js/scripts.js</code> file as well.

